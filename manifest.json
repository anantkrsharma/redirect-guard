{
    "manifest_version": 3,
    "name": "Redirect-Guard",
    "version": "1.0.0",
    "description": "Blocks auto redirects and highlights suspicious links.",
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "./dist/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["./dist/content.js"],
        "run_at": "document_start"
        }
    ]
}
