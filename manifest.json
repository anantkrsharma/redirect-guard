{
    "manifest_version": 3,
    "name": "Redirect Guard",
    "version": "1.0.0",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "dist/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
